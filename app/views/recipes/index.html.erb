<h1>Your recipes</h1>

<% @recipes.each do |recipe| %>

<div class="card" style="width: 20rem;">
  <img class="card-img-top" src="" alt="Card image cap">

  <div class="card-block">
    <h4 class="card-title">
      <%= recipe.name  %>
    </h4>
    <p class="card-text">
      <%= recipe.description %>
    </p>
    <a href="#" class="btn tbn-small btn-primary">Go somewhere</a>

  </div>
  <code>Created: <%= time_ago_in_words(recipe.created_at) %> ago</code>

</div>


  <% end %>
